{
  "name": "next-store-with-payloadcms",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prune:cms": "turbo prune @repo/cms --use-gitignore=false",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "turbo": "^2.5.3"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": "^20.11.1 || ^22.0.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@vercel/speed-insights"
    ],
    "onlyBuiltDependencies": [
      "@vercel/speed-insights",
      "sharp"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
