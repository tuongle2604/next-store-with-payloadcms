{
  "extends": "@repo/ts-config/next.json",
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@payload-config": [
        "./src/payload.config.ts"
      ],
      "@repo/schemas/*": [
        "../../packages/schemas/src/*"
      ],
      "@repo/shared-data/*": [
        "../../packages/shared-data/src/*"
      ]
    },
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "next-fix.d.ts",
    "i18n.d.ts",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/script/**/*.ts"
  ],
  "references": [
    {
      "path": "../../packages/schemas"
    },
    {
      "path": "../../packages/shared-data"
    }
  ]
}
